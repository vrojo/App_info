<?php

    $connect = mysqli_connect("localhost", "root", "root", "bdd");
    mysqli_set_charset($connect,"utf8");

    if(isset($_POST["id"]))
    {
        if($_POST["action"]=="supprimer")
        {
            $result = mysqli_query($connect, "delete from utilisateur where id_utilisateur=".$_POST["id"]) or die("MsQL Erreur : ".mysqli_errno($connect));
        }
        else
        {
            $result = mysqli_query($connect, "update utilisateur set admin  = '1' where id_utilisateur=".$_POST["id"]) or die("MsQL Erreur : ".mysqli_errno($connect));

        }
        header("location:fonctionmessage.php");
    }
    

    $result = mysqli_query($connect, "select id_utilisateur,nom_u, prenom_u, mail from utilisateur") or die("MsQL Erreur : ".mysqli_errno($connect));
    echo "<table><tr><th>Nom</th><th>Prenom</th><th>Mail</th></tr>";
?>

<?php
echo "<div class='tableau'";
    while($infos = mysqli_fetch_assoc($result)) 
    {
        
        echo "<tr>";
        echo "<td>".$infos['nom_u']."</td>";
        echo "<td>".$infos['prenom_u']."</td>";
        echo "<td>".$infos['mail']."</td>";
        echo '<td><form method="POST" action="fonctionmessage.php"><input type="text" name="id" style="display:none" value='.$infos['id_utilisateur'].'></input><select name="action"><option value="supprimer">Supprimer</option><option value="upgrade">Upgrade</option></select><input type="submit" name="Valider"/></form></td></tr>';
       

    }
    echo "</table>";
  echo "</div>";

                         
?>  

